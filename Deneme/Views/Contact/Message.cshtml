@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "İletişim";
}

<div class="container-fluid py-5" style="background-color: #f8f9fa;">
    <div class="row justify-content-center">
        <div class="col-xl-10">
            <div class="row g-0 shadow-lg rounded">
                <div class="col-lg-5 bg-white p-5 d-flex flex-column justify-content-center">
                    <h2 class="mb-4">İletişim Bilgileri</h2>
                    <p>Merhaba! Ben <strong>Hevidar Tekin</strong>. Sorularınızı, önerilerinizi veya iş birliği tekliflerinizi bekliyorum.</p>

                    <ul class="list-unstyled mt-4">
                        <li class="mb-3"><i class="bi bi-envelope-fill me-2"></i>hevidar.tekinn@gmail.com</li>
                        <li class="mb-3"><i class="bi bi-github me-2"></i><a href="https://github.com/HevidarTekin" target="_blank">github.com/HevidarTekin</a></li>
                        <li class="mb-3"><i class="bi bi-linkedin me-2"></i><a href="#" target="_blank">linkedin.com/in/hevidartekin</a></li>
                    </ul>

                    <div class="mt-4">
                        <h5>Sosyal Medya</h5>
                        <a href="https://github.com/HevidarTekin" class="btn btn-outline-dark btn-sm me-2" target="_blank"><i class="bi bi-github"></i></a>
                        <a href="#" class="btn btn-outline-dark btn-sm" target="_blank"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>


                <div class="col-lg-7 bg-light p-5">
                    <h2 class="mb-4">Mesaj Gönder</h2>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }


                    <form asp-action="SendMessage" method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="Name" class="form-label">Ad Soyad</label>
                            <input type="text" class="form-control rounded-3" id="Name" name="Name" required />
                            <div class="invalid-feedback">Adınızı girmeniz gerekiyor.</div>
                        </div>
                        <div class="mb-3">
                            <label for="Email" class="form-label">E-posta</label>
                            <input type="email" class="form-control rounded-3" id="Email" name="Email" required />
                            <div class="invalid-feedback">Geçerli bir e-posta girin.</div>
                        </div>
                        <div class="mb-3">
                            <label for="Subject" class="form-label">Konu</label>
                            <input type="text" class="form-control rounded-3" id="Subject" name="Subject" required />
                            <div class="invalid-feedback">Konu başlığını girmeniz gerekiyor.</div>
                        </div>

                        <div class="mb-3">
                            <label for="Message" class="form-label">Mesajınız</label>
                            <textarea class="form-control rounded-3" id="Content" name="Content" rows="6" required></textarea>
                            <div class="invalid-feedback">Mesajınızı yazmanız gerekiyor.</div>
                        </div>
                        <button type="submit" class="btn btn-dark w-100">Gönder</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}
