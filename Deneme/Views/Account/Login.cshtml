@{
    Layout = null;
}
@model LoginViewModel

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş Yap</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #0d1117, #1f3b73);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: "Segoe UI", Tahoma, sans-serif;
            margin: 0;
        }

        .card {
            width: 100%;
            max-width: 420px;
            background: #ffffff;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.3);
            padding: 25px;
        }

            .card h3 {
                text-align: center;
                margin-bottom: 20px;
                font-weight: bold;
                color: #1f3b73;
            }

        .btn-primary {
            background-color: #1f3b73;
            border: none;
            font-weight: 600;
        }

            .btn-primary:hover {
                background-color: #162b56;
            }

        .form-label {
            font-weight: 600;
            color: #333;
        }

        .form-control {
            border-radius: 8px;
        }

        .footer-text {
            text-align: center;
            margin-top: 15px;
            font-size: 14px;
            color: #555;
        }

            .footer-text a {
                color: #1f3b73;
                font-weight: 600;
                text-decoration: none;
            }

                .footer-text a:hover {
                    text-decoration: underline;
                }

        .text-danger {
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="card">
        <h3>Giriş Yap</h3>

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">E-Posta</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Şifre</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
        </form>
        <form asp-action="Login" method="post">
            <!-- Email ve Şifre alanları burada -->

            <div class="mt-3">
                <a asp-action="ForgotPassword" asp-controller="Account">Şifremi Unuttum</a>
            </div>
        </form>

    </div>
</body>
</html>
