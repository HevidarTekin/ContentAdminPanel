@{
    Layout = null;
}
@model Deneme.ViewModels.RegisterViewModel

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kayıt Ol</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #1cb02b 0%, #69b0d6 100%);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: Arial, sans-serif;
        }

        .register-card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            padding: 30px;
            width: 400px;
        }

            .register-card h2 {
                text-align: center;
                margin-bottom: 20px;
                color: #333;
                font-weight: bold;
            }

        .form-control {
            border-radius: 8px;
        }

        .btn-register {
            background-color: #1cb02b;
            color: white;
            border-radius: 8px;
            font-weight: bold;
        }
            .btn-register:hover {
                background-color: #2575fc;
            }

        .text-danger {
            font-size: 0.85em;
        }
    </style>
</head>
<body>
    <div class="register-card">
        <h2>Kayıt Ol</h2>
        <form asp-action="Register" method="post">
            <div class="mb-3">
                <label class="form-label">Ad</label>
                <input asp-for="FirstName" class="form-control" placeholder="Adınızı girin" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Soyad</label>
                <input asp-for="LastName" class="form-control" placeholder="Soyadınızı girin" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">E-posta</label>
                <input asp-for="Email" class="form-control" placeholder="E-posta adresinizi girin" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Şifre</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Şifrenizi girin" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Şifre (Tekrar)</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Şifrenizi tekrar girin" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
               
                <label>Güvenlik Sorusu</label>
                <input asp-for="SecurityQuestion" class="form-control" />

                <label>Güvenlik Cevabı</label>
                <input asp-for="SecurityAnswer" class="form-control" />
            </div>
            <button type="submit" class="btn btn-register w-100">Kayıt Ol</button>
            <div class="text-center mt-3">
                <a href="/Account/Login" class="text-decoration-none">Zaten hesabınız var mı? Giriş Yap</a>
            </div>
          


        </form>
    </div>
</body>
</html>
