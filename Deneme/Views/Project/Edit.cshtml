@model Deneme.Models.Project

@{
    ViewData["Title"] = "Proje Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Proje Düzenle</h2>
    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="mt-3">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="Tags" class="form-label"></label>
            <input asp-for="Tags" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="GitHubLink" class="form-label"></label>
            <input asp-for="GitHubLink" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Proje Görseli</label>
            <input type="file" name="ImageFile" class="form-control" accept="image/*" />
        </div>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="mb-3">
                <img src="@Model.ImageUrl" alt="Proje Görseli" style="max-height: 200px;" />
            </div>
        }

        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a asp-action="List" class="btn btn-secondary">İptal</a>
    </form>
</div>