@model List<Project>
@{
    ViewData["Title"] = "Proje Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Proje Listesi</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Ad</th>
                            <th>Açıklama</th>
                            <th>Etiketler</th>
                            <th style="width: 150px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.Tags</td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning w-100">Düzenle</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger w-100"
                                           onclick="return confirm('Bu projeyi silmek istediğinize emin misiniz?');">Sil</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">Henüz proje eklenmemiş.</div>
            }
        </div>
    </div>
</div>